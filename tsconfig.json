{
    "compilerOptions": {
      "target": "es6",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "outDir": "build",
      "moduleResolution": "node",
      "baseUrl": ".",
      "skipLibCheck": true,
    },
    "include": ["src/**/*", "src/app.ts", "stateManager.ts"],
    "exclude": ["**/*.spec.ts"]
  }